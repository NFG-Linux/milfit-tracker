<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.milfittracker.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_to_navy"
            app:destination="@id/navyFragment" />
    </fragment>

    <fragment
        android:id="@+id/branchFragment"
        android:name="com.example.milfittracker.ui.home.BranchFragment"
        android:label="Branch" >
    </fragment>

    <fragment
        android:id="@+id/navyFragment"
        android:name="com.example.milfittracker.ui.navy.NavyFragment"
        android:label="Navy" />

    <fragment
        android:id="@+id/stopwatchFragment"
        android:name="com.example.milfittracker.ui.stopwatch.StopwatchFragment"
        tools:layout="@layout/fragment_stopwatch"
        android:label="Stopwatch" />

    <fragment
        android:id="@+id/logFragment"
        android:name="com.example.milfittracker.ui.log.LogFragment"
        android:label="Log" />

    <fragment
        android:id="@+id/runsFragment"
        android:name="com.example.milfittracker.ui.log.RunsFragment"
        android:label="Runs"
        tools:layout="@layout/fragment_runs" />

    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.example.milfittracker.ui.analysis.AnalysisFragment"
        android:label="Analysis" />

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.milfittracker.ui.more.MoreFragment"
        android:label="More" />
</navigation>