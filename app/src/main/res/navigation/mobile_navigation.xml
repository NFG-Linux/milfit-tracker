<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.milfittracker.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_to_navy"
            app:destination="@id/navyFragment" />
        <action
            android:id="@+id/home_to_marines"
            app:destination="@id/marineFragment" />
        <action
            android:id="@+id/home_to_airforce"
            app:destination="@id/airForceFragment" />
        <action
            android:id="@+id/home_to_spaceforce"
            app:destination="@id/spaceForceFragment" />
        <action
            android:id="@+id/home_to_army"
            app:destination="@id/armyFragment" />
        <action
            android:id="@+id/home_to_coastguard"
            app:destination="@id/coastGuardFragment" />
    </fragment>

    <fragment
        android:id="@+id/navyFragment"
        android:name="com.example.milfittracker.ui.navy.NavyFragment"/>

    <fragment
        android:id="@+id/armyFragment"
        android:name="com.example.milfittracker.ui.army.armyFragment"/>

    <fragment
        android:id="@+id/marineFragment"
        android:name="com.example.milfittracker.ui.marines.marineCorpsFragment"/>

    <fragment
        android:id="@+id/spaceForceFragment"
        android:name="com.example.milfittracker.ui.spaceforce.spaceForceFragment"/>

    <fragment
        android:id="@+id/airForceFragment"
        android:name="com.example.milfittracker.ui.airforce.airForceFragment"/>

    <fragment
        android:id="@+id/coastGuardFragment"
        android:name="com.example.milfittracker.ui.coastguard.coastGuardFragment"/>

    <fragment
        android:id="@+id/stopwatchFragment"
        android:name="com.example.milfittracker.ui.stopwatch.StopwatchFragment"/>

    <fragment
        android:id="@+id/logFragment"
        android:name="com.example.milfittracker.ui.log.LogFragment"/>

    <fragment
        android:id="@+id/runsFragment"
        android:name="com.example.milfittracker.ui.log.RunsFragment"
        tools:layout="@layout/fragment_runs" />

    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.example.milfittracker.ui.analysis.AnalysisFragment"/>

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.milfittracker.ui.more.MoreFragment"/>
</navigation>