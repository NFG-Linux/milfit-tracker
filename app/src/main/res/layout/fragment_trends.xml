<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.analysis.TrendsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="8dp"
        android:showDividers="none">

        <!-- Stat row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/card_current"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text="Current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#666" />
                    <TextView
                        android:id="@+id/Current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="–"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <Space android:layout_width="8dp" android:layout_height="0dp"/>

            <LinearLayout
                android:id="@+id/card_best"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:padding="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text="Best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#666" />
                    <TextView
                        android:id="@+id/Best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="–"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <Space android:layout_width="8dp" android:layout_height="0dp"/>

            <LinearLayout
                android:id="@+id/card_delta"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:padding="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text="30-day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#666" />
                    <TextView
                        android:id="@+id/Delta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="–"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Placeholder chart area -->
        <FrameLayout
            android:id="@+id/chartBox"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#FFF5F5F0"
            android:foreground="?attr/selectableItemBackground"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Trend chart placeholder)"
                android:textColor="#777"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/Export"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Export CSV"/>

            <Space android:layout_width="12dp" android:layout_height="0dp"/>

            <Button
                android:id="@+id/Share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>